generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id      String                 @id @default(cuid())
  content String
  vector  Unsupported("vector")?

  chat   Chat?   @relation(fields: [chatId], references: [id])
  chatId String?
}

model Chat {
  id        String     @id @default(cuid())
  title     String
  fileNames String[]   @default([])
  documents Document[]
}
